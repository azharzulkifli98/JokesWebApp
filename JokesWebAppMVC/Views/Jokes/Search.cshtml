@model JokesWebAppMVC.Models.Joke

<h4>Search For A Joke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResults">
            <div class="form-group">
                <label for="SearchPhrase" class="control-label">SearchPhrase</label>
                <input name="SearchPhrase" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListofCategory, "Value", "Text"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
